{
  "manifest_version": 3,
  "name": "AI Web Summarizer",
  "description": "Summarize any webpage instantly using Chrome's built-in AI (Gemini Nano).",
  "version": "1.0",
  "author": "Koneti Sanjana",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
  "16": "icon.png",
  "48": "icon.png",
  "128": "icon.png"
},
"permissions": ["activeTab", "scripting", "storage", "contextMenus"],
  "host_permissions": ["<all_urls>"]
}
